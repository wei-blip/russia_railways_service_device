/dts-v1/;
#include <st/l4/stm32l452Xc.dtsi>
#include <st/l4/stm32l452c(c-e)ux-pinctrl.dtsi>

/ {
    model = "RTS RS.0015-100 board";
    compatible = "rts,rs_0015_100";

    chosen {
//        zephyr,console = &usart2;
//        zephyr,shell-uart = &usart2;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
    };

    power-states {
        stop0: state0 {
            compatible = "zephyr,power-state";
            power-state-name = "suspend-to-idle";
            substate-id = <1>;
            min-residency-us = <100>;
        };
        stop1: state1 {
            compatible = "zephyr,power-state";
            power-state-name = "suspend-to-idle";
            substate-id = <2>;
            min-residency-us = <500>;
        };
        stop2: state2 {
            compatible = "zephyr,power-state";
            power-state-name = "suspend-to-idle";
            substate-id = <3>;
            min-residency-us = <900>;
        };
    };

    leds {
        compatible = "gpio-leds";
        led0: led_0 {
            gpios = <&gpioa 10 GPIO_ACTIVE_HIGH>;
            label = "User LED0";
        };
        led1: led_1 {
            gpios = <&gpioa 11 GPIO_ACTIVE_HIGH>;
            label = "User LED1";
        };
    };

    aliases {
        led0 = &led0;
        led1 = &led1;
    };
};

&cpu0 {
    cpu-power-states = <&stop0 &stop1 &stop2>;
};

&clk_hsi {
    status = "okay";
};

&clk_lsi {
    status = "okay";
};

&lptim1 {
    status = "okay";
};

&pll {
    div-m = <1>;            /* 16  / 1  = 16MHz  */
    mul-n = <20>;           /* 16  * 20 = 320MHz */
    div-r = <4>;            /* 320 / 4  = 80MHz  */
    clocks = <&clk_hsi>;
    status = "okay";
};

&rcc {
    clocks = <&pll>;
    clock-frequency = <DT_FREQ_M(80)>;
    ahb-prescaler = <1>;
    apb1-prescaler = <1>;
    apb2-prescaler = <1>;
};

&usart2 {
    pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
    pinctrl-names = "default";
    current-speed = <115200>;
    status = "okay";
};

&dma1 {
    status = "okay";
};

&spi2 {
    pinctrl-0 = <&spi2_sck_pb13 &spi2_miso_pb14 &spi2_mosi_pb15>;
    pinctrl-names = "default";
    cs-gpios = <&gpiob 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    status = "okay";
    dmas = <&dma1 5 1 0x20440>, <&dma1 4 1 0x20480>;
    dma-names = "tx", "rx";
    uwb: dw1000@0 {
        compatible = "decawave,dw1000";
        reg = <0>;
        label = "DW1000";
        spi-max-frequency = <8000000>;
        reset-gpios = <&gpiob 2 GPIO_ACTIVE_LOW>;
        int-gpios = <&gpioa 15 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
        tx-ant-delay=<0x4042>;
        rx-ant-delay=<0x4042>;
    };
};

&i2c2 {
    pinctrl-0 = <&i2c2_scl_pb10 &i2c2_sda_pb11>;
    pinctrl-names = "default";
    clock-frequency = <I2C_BITRATE_FAST>;
    status = "okay";
};

&rtc {
    status = "okay";
};

&rng {
    status = "okay";
};

/*
* For more information, see:
* http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
*/
&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;
        /*
         * Reserve the final 16 KiB for file system partition
         */
        storage_partition: partition@7c000 {
            label = "storage";
            reg = <0x0007c000 0x00008000>;
        };
    };
};
